<div class= "col-lg-12">
  <div class="card rounded-0 mt-5 mb-5">
      <div class="card-body">
          <h2 class="text-center">To-Do Lists</h2>
      </div>
  </div>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Description</th>
      <th>Task Completed</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @lists.each do |list| %>
    <% if list.completed %>
        <tr class= "table-secondary">
          <td style="text-decoration: line-through"><%= list.description %></td>
          <td><%= list.completed %></td>
          <td>
            <%= link_to 'Edit', edit_list_path(list.id) , class: "btn btn-primary"%>
            <%= link_to "View", list_path(list), class: "btn btn-info"%>
            <%= link_to 'Delete', list_path(list), class: "btn btn-danger", data: { 
                turbo_method: :delete, 
                turbo_confirm: 'Are you sure?'  }%>
          </td>
        </tr>
        <% else %>
          <tr>
            <td><%= list.description %></td>
            <td><%= list.completed %></td>
            <td>
              <%= link_to 'Edit', edit_list_path(list.id) , class: "btn btn-primary"%>
              <%= link_to "View", list_path(list), class: "btn btn-info"%>
              <%= link_to 'Delete', list_path(list), class: "btn btn-danger", data: { 
                  turbo_method: :delete, 
                  turbo_confirm: 'Are you sure?'  }%>
            </td>
          </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
</div>
<%= link_to "New list", new_list_path,class: "btn btn-primary btn-lg mb-4 rounded-0" %>
